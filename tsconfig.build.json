{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "resolveJsonModule": false,
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "module": "NodeNext",
    "lib": ["ES2022"],
    "target": "ES2018"
  },
  "include": ["src"],
  "exclude": ["src/fixtures", "dist", "**/*.test.ts"]
}
